<div class ='container'>
    <div class ='jumbotron'>
        <h2>New Folder</h2>
        <%=form_for @folder, url: "/users/:user_id/folders", method: 'post' do |f|%>
            <div class='form-group'>
            <%=f.label :name, "Folder Name" %>
            <%=f.text_field :name, class: 'form-control'%>
            </div>
            <%= f.hidden_field :user_id, :value => @user.id%>
            <%=f.submit 'Create', class: 'btn-btn-default'%>
        <%end%>
    </div>
    <img class='img-thumbnail' src='https://images.pexels.com/photos/1370294/pexels-photo-1370294.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940' alt='filecab'>
</div>