<ul class="nav nav-tabs">
  <li class="active"><%= link_to('Signup', new_user_path)%></li>
  <li><%= link_to('Sign in', login_path)%></li>
</ul>

<div class='container'>
    <div class='jumbotron'>
        <h2>Sign up</h2>
        <%=form_for @user do |f|%>
            <div class='form-group'>
                <%=f.label :name, "Enter Your Name"%>
                <%=f.text_field :name, class: 'form-control'%>
            </div>
            <div class='form-group'>
                <%=f.label :password, "Enter Your Password"%>
                <%=f.text_field :password, class: 'form-control' %>
            </div>
            <%=f.submit 'Create User', class: "btn btn-default"%>
        <%end%>
    </div>
</div>